---

<div class="w-64 h-full bg-editor-bg flex flex-col flex-shrink-0">
  <!-- Header -->
  <div class="h-9 flex items-center justify-between px-4 bg-sidebar-bg">
    <span class="text-xs font-semibold text-[#6b7d8f] uppercase tracking-wider">Explorer</span>
    <button class="text-[#6b7d8f] hover:text-white transition-colors">
      <span class="material-symbols-outlined text-lg">more_horiz</span>
    </button>
  </div>
  
  <!-- File Tree -->
  <div class="flex-1 overflow-y-auto py-2 font-mono text-sm">
    <!-- PORTFOLIO-V1 (expanded) -->
    <div class="flex items-center px-2 py-1 text-white cursor-pointer hover:bg-white/5">
      <span class="material-symbols-outlined text-base text-[#6b7d8f] -rotate-90 transition-transform">chevron_right</span>
      <span class="material-symbols-outlined text-base text-[#6b7d8f] ml-0.5">folder_open</span>
      <span class="ml-1.5">PORTFOLIO-V1</span>
    </div>
    
    <!-- .github (collapsed) -->
    <div class="flex items-center pl-4 py-1 text-[#6b7d8f] cursor-pointer hover:bg-white/5">
      <span class="material-symbols-outlined text-base">chevron_right</span>
      <span class="material-symbols-outlined text-base ml-0.5">folder</span>
      <span class="ml-1.5">.github</span>
    </div>
    
    <!-- src (expanded) -->
    <div class="flex items-center pl-4 py-1 text-white cursor-pointer hover:bg-white/5">
      <span class="material-symbols-outlined text-base text-[#6b7d8f] -rotate-90 transition-transform">chevron_right</span>
      <span class="material-symbols-outlined text-base text-primary ml-0.5">folder_open</span>
      <span class="ml-1.5">src</span>
    </div>
    
    <!-- Projects (expanded) -->
    <div class="flex items-center pl-6 py-1 text-white cursor-pointer hover:bg-white/5">
      <span class="material-symbols-outlined text-base text-[#6b7d8f] -rotate-90 transition-transform">chevron_right</span>
      <span class="material-symbols-outlined text-base text-primary ml-0.5">folder_open</span>
      <span class="ml-1.5">Projects</span>
    </div>
    
    <!-- Featured.tsx (selected) -->
    <div class="flex items-center pl-8 py-1 text-white border-l-2 border-primary bg-[#233648] cursor-pointer">
      <span class="material-symbols-outlined text-base text-syntax-pink">code</span>
      <span class="ml-1.5">Featured.tsx</span>
    </div>
    
    <!-- Archival.tsx -->
    <div class="flex items-center pl-8 py-1 text-[#6b7d8f] hover:text-white hover:bg-white/5 cursor-pointer">
      <span class="material-symbols-outlined text-base">code</span>
      <span class="ml-1.5">Archival.tsx</span>
    </div>
    
    <!-- About.js (JS label) -->
    <div class="flex items-center pl-6 py-1 text-[#6b7d8f] hover:text-white hover:bg-white/5 cursor-pointer">
      <span class="material-symbols-outlined text-base text-syntax-yellow">code</span>
      <span class="ml-1.5">About.js</span>
    </div>
    
    <!-- Skills.json -->
    <div class="flex items-center pl-2 py-1 text-[#6b7d8f] hover:text-white hover:bg-white/5 cursor-pointer">
      <span class="material-symbols-outlined text-base text-syntax-purple">data_object</span>
      <span class="ml-1.5">Skills.json</span>
    </div>
    
    <!-- Resume.pdf -->
    <div class="flex items-center pl-2 py-1 text-[#6b7d8f] hover:text-white hover:bg-white/5 cursor-pointer">
      <span class="material-symbols-outlined text-base text-red-500">picture_as_pdf</span>
      <span class="ml-1.5">Resume.pdf</span>
    </div>
  </div>
</div>
