<div class="h-6 bg-primary flex items-center justify-between px-2 text-white text-[11px] font-mono flex-shrink-0">
  <!-- Left Side -->
  <div class="flex items-center h-full">
    <!-- Branch - always visible -->
    <button class="h-full px-2 flex items-center gap-1 hover:bg-white/20 transition-colors">
      <span class="material-symbols-outlined text-[14px]">source</span>
      <span class="hidden sm:inline">main*</span>
    </button>
    
    <!-- Sync - hide text on mobile, show icon only -->
    <button class="h-full px-2 flex items-center gap-1 hover:bg-white/20 transition-colors">
      <span class="material-symbols-outlined text-[14px]">sync</span>
      <span class="hidden md:inline">0</span>
      <span class="hidden md:inline material-symbols-outlined text-[12px]">arrow_downward</span>
      <span class="hidden md:inline">0</span>
    </button>
    
    <!-- Errors - hide on smallest screens -->
    <button class="hidden sm:flex h-full px-2 items-center gap-1 hover:bg-white/20 transition-colors">
      <span class="material-symbols-outlined text-[14px]">error</span>
      <span>0</span>
    </button>
    
    <!-- Warnings - hide on small screens -->
    <button class="hidden md:flex h-full px-2 items-center gap-1 hover:bg-white/20 transition-colors">
      <span class="material-symbols-outlined text-[14px]">warning</span>
      <span>0</span>
    </button>
  </div>
  
  <!-- Right Side -->
  <div class="flex items-center h-full">
    <!-- Line/Column - always visible -->
    <button class="h-full px-2 hover:bg-white/20 transition-colors">
      <span class="hidden sm:inline">Ln 27, Col 52</span>
      <span class="sm:hidden">27:52</span>
    </button>
    
    <!-- UTF-8 - hide on small screens -->
    <button class="hidden md:flex h-full px-2 items-center hover:bg-white/20 transition-colors">
      UTF-8
    </button>
    
    <!-- LF - hide on smaller screens -->
    <button class="hidden lg:flex h-full px-2 items-center hover:bg-white/20 transition-colors">
      LF
    </button>
    
    <!-- Language - hide on small screens -->
    <button class="hidden md:flex h-full px-2 items-center gap-1 hover:bg-white/20 transition-colors">
      <span class="material-symbols-outlined text-[14px]">data_object</span>
      <span class="hidden lg:inline">TypeScript React</span>
      <span class="lg:hidden">TSX</span>
    </button>
    
    <!-- Notifications - always visible -->
    <button class="h-full px-2 flex items-center hover:bg-white/20 transition-colors">
      <span class="material-symbols-outlined text-[14px]">notifications</span>
    </button>
  </div>
</div>
