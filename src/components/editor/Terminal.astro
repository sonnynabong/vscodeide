<div class="h-32 bg-editor-bg border-t border-[#324d67] flex flex-col flex-shrink-0">
  <!-- Terminal Tabs -->
  <div class="h-8 bg-sidebar-bg flex items-center px-2">
    <!-- Tabs -->
    <div class="flex items-center h-full flex-1">
      <button class="h-full px-3 flex items-center text-sm text-white border-b-2 border-primary bg-editor-bg">
        Terminal
      </button>
      <button class="h-full px-3 flex items-center text-sm text-[#6b7d8f] hover:text-white hover:bg-[#233648]/50 transition-colors">
        Output
      </button>
      <button class="h-full px-3 flex items-center text-sm text-[#6b7d8f] hover:text-white hover:bg-[#233648]/50 transition-colors">
        Debug Console
      </button>
      <button class="h-full px-3 flex items-center text-sm text-[#6b7d8f] hover:text-white hover:bg-[#233648]/50 transition-colors">
        Problems
      </button>
    </div>
    
    <!-- Icons -->
    <div class="flex items-center gap-1">
      <button class="p-1 text-[#6b7d8f] hover:text-white hover:bg-white/10 rounded">
        <span class="material-symbols-outlined text-base">add</span>
      </button>
      <button class="p-1 text-[#6b7d8f] hover:text-white hover:bg-white/10 rounded">
        <span class="material-symbols-outlined text-base">delete</span>
      </button>
      <button class="p-1 text-[#6b7d8f] hover:text-white hover:bg-white/10 rounded">
        <span class="material-symbols-outlined text-base">expand_less</span>
      </button>
      <button class="p-1 text-[#6b7d8f] hover:text-white hover:bg-white/10 rounded">
        <span class="material-symbols-outlined text-base">close</span>
      </button>
    </div>
  </div>
  
  <!-- Terminal Content -->
  <div class="flex-1 p-3 font-mono text-sm overflow-auto">
    <div class="flex items-start">
      <span class="text-syntax-green">user@portfolio</span>
      <span class="text-white mx-1">:</span>
      <span class="text-primary">~/src/Projects</span>
      <span class="text-white mx-1">$</span>
      <span class="text-white ml-1">git status</span>
    </div>
    <div class="mt-1 text-white">
      On branch <span class="text-syntax-purple">main</span>
    </div>
  </div>
</div>
