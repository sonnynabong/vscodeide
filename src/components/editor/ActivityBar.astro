<div class="w-12 h-full bg-sidebar-bg flex flex-col justify-between flex-shrink-0">
  <!-- Top Icons -->
  <div class="flex flex-col items-center pt-2">
    <!-- Mobile Menu Toggle - only visible on mobile/tablet -->
    <button id="menu-toggle" class="lg:hidden w-full py-3 flex justify-center items-center text-[#6b7d8f] hover:text-white transition-colors border-l-2 border-transparent">
      <span class="material-symbols-outlined text-[28px]">menu</span>
    </button>
    
    <!-- folder_copy (active) -->
    <button class="w-full py-3 flex justify-center items-center relative border-l-2 border-primary text-primary bg-[#233648]/50">
      <span class="material-symbols-outlined text-[28px]">folder_copy</span>
    </button>
    
    <!-- search -->
    <button class="w-full py-3 flex justify-center items-center relative border-l-2 border-transparent text-[#6b7d8f] hover:text-white transition-colors">
      <span class="material-symbols-outlined text-[28px]">search</span>
    </button>
    
    <!-- source with badge -->
    <button class="w-full py-3 flex justify-center items-center relative border-l-2 border-transparent text-[#6b7d8f] hover:text-white transition-colors">
      <span class="material-symbols-outlined text-[28px]">source</span>
      <span class="absolute top-2 right-1 w-4 h-4 bg-primary text-white text-[10px] rounded-full flex items-center justify-center font-mono">1</span>
    </button>
    
    <!-- bug_report -->
    <button class="w-full py-3 flex justify-center items-center relative border-l-2 border-transparent text-[#6b7d8f] hover:text-white transition-colors">
      <span class="material-symbols-outlined text-[28px]">bug_report</span>
    </button>
    
    <!-- smart_toy (filled) -->
    <button class="w-full py-3 flex justify-center items-center relative border-l-2 border-transparent text-[#6b7d8f] hover:text-white transition-colors">
      <span class="material-symbols-outlined text-[28px]" data-weight="fill">smart_toy</span>
    </button>
    
    <!-- extension -->
    <button class="w-full py-3 flex justify-center items-center relative border-l-2 border-transparent text-[#6b7d8f] hover:text-white transition-colors">
      <span class="material-symbols-outlined text-[28px]">extension</span>
    </button>
  </div>
  
  <!-- Bottom Icons -->
  <div class="flex flex-col items-center pb-2">
    <!-- account_circle -->
    <button class="w-full py-3 flex justify-center items-center relative border-l-2 border-transparent text-[#6b7d8f] hover:text-white transition-colors">
      <span class="material-symbols-outlined text-[28px]">account_circle</span>
    </button>
    
    <!-- settings -->
    <button class="w-full py-3 flex justify-center items-center relative border-l-2 border-transparent text-[#6b7d8f] hover:text-white transition-colors">
      <span class="material-symbols-outlined text-[28px]">settings</span>
    </button>
  </div>
</div>
