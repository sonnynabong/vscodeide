---
import TerminalLine from './TerminalLine.astro';
import ProgressBar from './ProgressBar.astro';
---

<div class="w-full">
  <!-- ASCII Art Header -->
  <div class="text-center mb-8">
    <pre class="font-mono text-xs sm:text-sm md:text-base text-slate-800 dark:text-slate-200 leading-tight whitespace-pre overflow-x-auto">
   ____  _____  ___    ____  _____ __     __
  |  _ \| ____|/ _ \  |  _ \| ____|\ \   / /
  | |_) |  _| | | | | | |_) |  _|   \ \ / / 
  |  __/| |___| |_| | |  __/| |___   \ V /  
  |_|   |_____|\___/  |_|   |_____|   \_/   
    </pre>
    
    <!-- Subtitle with Lines -->
    <div class="flex items-center justify-center gap-4 mt-4">
      <div class="h-px w-12 bg-gradient-to-r from-transparent to-slate-400 dark:to-slate-600"></div>
      <span class="text-xs sm:text-sm font-mono text-slate-600 dark:text-slate-400 tracking-widest">SYSTEM v2.0.4</span>
      <div class="h-px w-12 bg-gradient-to-l from-transparent to-slate-400 dark:to-slate-600"></div>
    </div>
  </div>

  <!-- Terminal Window -->
  <div class="bg-white dark:bg-slate-900 rounded-lg border border-slate-300 dark:border-slate-700 shadow-xl overflow-hidden">
    <!-- Terminal Header -->
    <div class="bg-slate-100 dark:bg-slate-800 border-b border-slate-300 dark:border-slate-700 px-4 py-2 flex items-center gap-2">
      <!-- Traffic Light Dots -->
      <div class="flex items-center gap-1.5">
        <span class="w-3 h-3 rounded-full bg-red-500"></span>
        <span class="w-3 h-3 rounded-full bg-yellow-500"></span>
        <span class="w-3 h-3 rounded-full bg-green-500"></span>
      </div>
      <!-- Window Title -->
      <div class="flex-1 text-center">
        <span class="text-xs font-mono text-slate-600 dark:text-slate-400">root@developer-portfolio:~</span>
      </div>
      <!-- Spacer for alignment -->
      <div class="w-14"></div>
    </div>
    
    <!-- Terminal Content -->
    <div class="p-4 sm:p-6 space-y-3 font-mono text-sm">
      <TerminalLine 
        icon="terminal" 
        text="Initializing kernel parameters" 
        status="ok" 
      />
      <TerminalLine 
        icon="dns" 
        text="Mounting virtual file system (VFS)" 
        status="ok" 
      />
      <TerminalLine 
        icon="folder_open" 
        text="Loading module:" 
        highlightText="Projects [32mb]" 
        status="ok" 
      />
      <TerminalLine 
        icon="memory" 
        text="Allocating memory for" 
        highlightText="Skills.json" 
        status="busy" 
      />
      <TerminalLine 
        icon="settings" 
        text="Compiling UI assets" 
        status="none" 
      />
      
      <!-- Blinking Cursor for Last Line -->
      <div class="flex items-center gap-2">
        <span class="text-slate-700 dark:text-slate-300">&gt; Compiling UI assets...</span>
        <span class="w-2 h-4 bg-primary animate-pulse"></span>
      </div>
      
      <!-- Progress Bar -->
      <ProgressBar progress={85} />
    </div>
  </div>
</div>
